<% include partials/header%>



<div class="container">
  <header class='jumbotron'>
    <div class="container">
      <h1>Welcome </h1>
      <p>View Our Campgrounds</p>
      <p>
        <a class="btn btn-primary btn-lg "href="/campgrounds/new">Create A New Camp Ground</a>
      </p>
    </div>
  </header>



  <div class="row" style="display: flex; flex-wrap: wrap">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds</h3>
    </div>
  </div>

  <div class="row text-center" >
    <% camps.forEach(camp => { %>
      <div class="col-md-3 col-sm-6">
        <div class="img-thumbnail" >
          <img src="<%= camp.image %>" >
          <div class="caption">
            <h4><%= camp.name %></h4>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <a href="/">Home</a>
</div>

<% include partials/footer %>
